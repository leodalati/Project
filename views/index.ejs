<%- include('partials/navbar') %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Record System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <div class="container">
      <div class="welcome-card">
        <h1>Welcome to the Employee Record System</h1>
        <p style="font-size: 1.1rem; color: #1a1a2e;">Efficiently manage your employee database</p>
        <% if (locals.user) { %>
          <p style="color: #1a1a2e; font-weight: 600;">Ready to manage employee records?</p>
          <div style="margin-top: 2rem;">
            <a href="/employee_records" class="btn btn-primary" style="margin-right: 1rem;">View Records</a>
            <a href="/create" class="btn btn-secondary">Add New Employee</a>
          </div>
        <% } else { %>
          <p style="color: #666; margin-top: 2rem;">Please log in to access the employee management system.</p>
          <div style="margin-top: 2rem;">
            <a href="/login" class="btn btn-primary" style="margin-right: 1rem;">Login</a>
            <a href="/register" class="btn btn-secondary">Register</a>
          </div>
        <% } %>
        <% if (locals.logoExists) { %>
          <img src="/images/transparent_LLF.png" alt="Team Logo" style="margin-top: 2rem;">
        <% } %>
      </div>
    </div>
  </body>
</html>
