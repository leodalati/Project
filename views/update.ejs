<%- include('partials/navbar') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container">
    <h2><%= title %></h2>
    
    <% if (EmployeeRecords && EmployeeRecords.length > 0) { %>
      <div style="overflow-x: auto;">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Position</th>
              <th>Department</th>
              <th>Contact Info</th>
              <th>Employment Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for(let count=0; count<EmployeeRecords.length; count++) { %>
              <tr>
                <td><%= EmployeeRecords[count].name %></td>
                <td><%= EmployeeRecords[count].position %></td>
                <td><%= EmployeeRecords[count].department %></td>
                <td><%= EmployeeRecords[count].contact_info %></td>
                <td><%= EmployeeRecords[count].employment_status %></td>
                <td>
                  <div class="action-buttons">
                    <a href="/update/<%= EmployeeRecords[count]._id %>" class="btn btn-secondary" style="font-size: 0.85rem; padding: 0.4rem 0.8rem;">Edit</a>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div style="text-align: center; padding: 3rem; background: #f5f5f5; border-radius: 5px;">
        <p style="color: #999; font-size: 1.1rem;">No employee records found.</p>
      </div>
    <% } %>
    
    <div style="margin-top: 2rem;">
      <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
  </div>
</body>
</html>