<%- include('../partials/navbar') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="container">
        <h1><%= title %></h1>

        <!-- Display flash messages for password change status -->
        <!-- This shows success or error messages after form submission -->
        <% if (message && message.length > 0) { %>
            <div class="alert alert-info">
                <%= message %>
            </div>
        <% } %>

        <!-- Password Change Form -->
        <!-- Collects: current password, new password, and confirmation password -->
        <form method="POST" action="/change_password">
            <!-- Current Password Input -->
            <!-- User must enter their current password for security verification -->
            <div class="form-group">
                <label for="currentPassword">Current Password</label>
                <input 
                    type="password" 
                    id="currentPassword" 
                    name="currentPassword" 
                    class="form-control" 
                    placeholder="Enter your current password"
                    required
                />
            </div>

            <!-- New Password Input -->
            <!-- User enters their desired new password -->
            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input 
                    type="password" 
                    id="newPassword" 
                    name="newPassword" 
                    class="form-control" 
                    placeholder="Enter your new password"
                    required
                />
            </div>

            <!-- Confirm New Password Input -->
            <!-- User re-enters the new password to ensure they didn't make a typo -->
            <div class="form-group">
                <label for="confirmPassword">Confirm New Password</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    class="form-control" 
                    placeholder="Confirm your new password"
                    required
                />
            </div>

            <!-- Form Action Buttons -->
            <div style="margin-top: 2rem; display: flex; gap: 1rem;">
                <button type="submit" class="btn btn-primary">Change Password</button>
                <a href="/" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>
