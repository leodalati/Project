<%- include('../partials/navbar') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
      <h2><%= title %></h2>
      <a href="/employee_records" class="btn btn-secondary">Back to Records</a>
    </div>

    <% if (EmployeeRecords && EmployeeRecords.length > 0) { %>
      <div style="overflow-x: auto;">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Position</th>
              <th>Department</th>
              <th>Contact Info</th>
              <th>Employment Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i<EmployeeRecords.length; i++) { %>
              <tr>
                <td><%= EmployeeRecords[i].name %></td>
                <td><%= EmployeeRecords[i].position %></td>
                <td><%= EmployeeRecords[i].department %></td>
                <td><%= EmployeeRecords[i].contact_info %></td>
                <td><%= EmployeeRecords[i].employment_status %></td>
                <td>
                  <form method="POST" action="/employee_records/delete/<%= EmployeeRecords[i]._id %>" style="margin: 0;" onsubmit="return confirm('Delete this record?');">
                    <button type="submit" class="btn btn-danger" style="font-size: 0.85rem; padding: 0.4rem 0.8rem;">Delete</button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div style="text-align: center; padding: 3rem; background: #f5f5f5; border-radius: 5px;">
        <p style="color: #999; font-size: 1.1rem;">No employee records found.</p>
      </div>
    <% } %>
  </div>
</body>
</html>